general {
        colors = true
        color_good = "#5dc0fc"
        color_bad = "#ff8a9b"
        color_degraded = "#fcee51"
        interval = 5
}

order += "ethernet _first_"
# order += "cpu_temperature 0"
order += "disk /"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: %quality %essid"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage (%consumption)"
        integer_battery_capacity = true
        hide_seconds = true
}

cpu_temperature 0 {
        format = "%degrees°C"
        path = "/sys/class/thermal/thermal_zone13/temp"
}

disk "/" {
        format = "%avail"
        prefix_type = "decimal"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
}

memory {
        memory_used_method = "classical"
        format = "%used"
        threshold_degraded = "10%"
        threshold_critical = "5%"
        format_degraded = "MEMORY LOW: %used"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
